{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "incremental": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "lib": ["es2018"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["./src/**/*"]
}
